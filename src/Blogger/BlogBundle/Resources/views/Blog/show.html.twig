{# src/Blogger/BlogBundle/Resouces/views/Blog/show.html.twig #}
{% extends 'BloggerBlogBundle:Page:layout.html.twig' %}

{% block name %}{{ blog.name }}{% endblock %}

{% block body %}
    <article class="blog">
        <header>
            <h2>{{ blog.name }}</h2>
        </header>

        <div>
            <p>{{ blog.content }}</p>
        </div>
    </article>

    <section class="comments" id="comments">
        <section class="previous-comments">
            <h3>Comments</h3>
            {% include 'BloggerBlogBundle:Comment:index.html.twig' with { 'comments': comments } %}
        </section>
    </section>
{% endblock %}
