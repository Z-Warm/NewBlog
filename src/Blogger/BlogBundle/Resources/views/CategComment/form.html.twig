{# src/Blogger/BlogBundle/Resources/views/CategComment/form.html.twig #}
{% block sidebar %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <script>
        var currurl = '{{ path('BloggerBlogBundle_categ_comment_create' , { 'category_id' : comment.category.id }) }}';
            $(document).ready(function() {
		
                $('#categcommentform').submit( function (response) {
                    var formSerialize = $(this).serialize();
                    $.ajax ({
                        url:currurl,
                        type: "POST",
                        data: formSerialize,
                        dataType: "JSON",
                        beforeSend: function (){
                            $("#information").text ("Waiting for data...");
                        },
                        success: function (data){
							$("#information").text (data);
                        }
                    });
                });
            });    
    </script>
{{ form_start(form, {'attr': {'class': 'blogger', 'id':'categcommentform'} }) }}

{{ form_widget(form) }}
<p>
    <input type="submit" value="Submit" >
    <div id="information" text ="text"></div>
	<button onclick="$('#categcommentform').submit()"></button>
</p>

{% endblock %}
